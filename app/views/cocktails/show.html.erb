<h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 400, height: 300, crop: :fill %>
  <% end %>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to 'Delete', dose, method: :delete %>
  </li>
  <% end %>
</ul>
<br>
<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %> | <%= link_to "Edit", edit_cocktail_path(@cocktail) %> | <%= link_to "Back", cocktails_path %>
